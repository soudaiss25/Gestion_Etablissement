pipeline {
    agent any

    tools {
        nodejs "nodeJs"
       
    }

    environment {
        DOCKER_IMAGE = "gestion-etablissement"
        GIT_REPO = "https://github.com/soudaiss25/gestion_etablissement.git"
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh 'node -v'
                sh 'python3 --version'
                sh 'pip3 --version'
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'master', url: "${GIT_REPO}"
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        //   stage('Test Frontend') {
        //     steps {
        //         dir('frontend') {
        //             sh 'npm test'
        //         }
        //     }
        // }



         stage('Install Dependencies - Django') {
             steps {
                 
                  sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r requirements.txt
                    
                    '''
               }
         }

        stage('run Django') {
            steps {
                
                           sh '''
        # Utilisation de bash pour éviter les erreurs de shell
        #!/bin/bash
        
        # Activation de l'environnement virtuel
         . venv/bin/activate

        

        # Lancer le serveur Django
        python3 backend/manage.py runserver 0.0.0.0:8000 &
        '''
               
            }
        }

        

        stage('Test Backend') {
            steps {
              sh '''
        # Utilisation de bash pour éviter les erreurs de shell
        #!/bin/bash
        
        # Activation de l'environnement virtuel
         . venv/bin/activate

        

        # Lancer le serveur Django
        python3 backend/manage.py test
        ''' // Exécute les tests Django
                }
            }
        }

        
      
        stage('Docker Build & Push') {
            steps {
                sh '''
                docker build -t ${DOCKER_IMAGE}:latest .
                echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                docker push ${DOCKER_IMAGE}:latest
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker stop gestion-etablissement || true
                docker rm gestion-etablissement || true
                docker run -d --name gestion-etablissement -p 8080:8080 ${DOCKER_IMAGE}:latest
                '''
            }
        }
    }

